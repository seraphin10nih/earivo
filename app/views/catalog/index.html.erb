 <% @category.each do |categories| %>
    <h2 id="<%= categories.title %>"><%= categories.title %></h2>
   
      <% @products.each do |product| %>
        <% if product.category_id == categories.id %>
      
               <% cache product do %>
                  <div class="row mb-4">
                    <div class="card w-100 bg-light">
                      <div class="card-body">
                        <h2 class="card-title"><%= product.title %></h2>
                        <div class="row">
                          <div class="col-6">
                            <%= image_tag(product.image_url, width: "200") %>
                          </div>
                          <div class="col-6">
                            <div class="card-text"><%= sanitize(product.description) %></div>
                          </div>
                        </div>
                      </div>
                      <div class="card-footer text-center font-weight-bold">
                        <%= number_to_currency product.price, unit: 'Ar', separator: ',', format: '%u %n' %>
                        <%= button_to 'Ajouter au panier', line_items_path(product_id: product), class: 'btn btn-primary', remote: true %>
                      </div>
                    </div> 
                  </div>
                <% end %>
  
        <% end %>
      <% end %>
  
<% end %>  









